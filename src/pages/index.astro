---
import Layout from '../layouts/Layout.astro';
import type { Project } from '../types/project';

const res = await fetch('https://api.github.com/users/davidarizpe/repos');
const projects: Project[] = await res.json();
---

<Layout>
  <nav class="nav">
		<div id="aboutme">
			<img src="https://github.com/davidarizpe.png" alt="me" id="me">
			<header class="header">
				<h1 class="title">David Arizpe</h1>
				<p id="myskill">Junior Web Developer</p>
			</header>
		</div>
		<p class="description">
			I'm a passionate and creative web developer with multiple knowledges in front end and some in back end. I'm always looking to learn and improve my skills.
		</p>
	</nav>

	<main class="main">
		<section class="section">
			<h2 class="subtitle">Skills</h2>
			<div id="skills">
				<div class="forntend">
					<h3 class="header">Frontend</h3>
					<ul>
						<li>HTML</li>
						<li>CSS</li>
						<li>JavaScript</li>
						<li>TypeScript</li>
						<li>React</li>
						<li>Next.js</li>
						<li>Astro</li>
					</ul>
				</div>
				<div class="backend">
					<h3 class="header">Backend</h3>
					<ul>
						<li>Node.js</li>
						<li>Express</li>
						<li>Prisma</li>
					</ul>
				</div>
				<div class="tools">
					<h3 class="header">Tools</h3>
					<ul>
						<li>Git</li>
						<li>GitHub</li>
						<li>VS Code</li>
					</ul>
				</div>
			</div>
		</section>

		<section>
			<h2 class="subtitle">Projects</h2>

			<div id="projects">
				{
					projects.slice(0, 3).map((project: Project) => (
						<div class="project" id={`${project.id}`}>
							<h3 class="header">{project.name}</h3>
							<a href={project.html_url} target="_blank" rel="project">
								<img src="/public/images/web.svg" alt={project.name} />
							</a>
						</div>
					))					
				}
			</div>
		</section>
	</main>
</Layout>

<style>
	#me {
		border-radius: 50%;
		width: 150px;
		height: 150px;
	}

	#aboutme {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 15px;
	}

	#myskill {
		margin: 0;
		font-size: 1rem;
	}

	#skills {
		display: flex;
		flex-wrap: wrap;
		gap: 15px;

		div {
			background-color: #555;
			padding: 15px;
			border-radius: 5px;	
			box-sizing: border-box;
		}
	}

	.header {
		margin: 0;
		font-size: 1.25rem;
	}

	#projects {
		display: flex;
		flex-direction: column;
		gap: 15px;

		.project {
			background-color: #555;
			padding: 15px;
			border-radius: 5px;	
			box-sizing: border-box;
			display: flex;
			justify-content: space-between;
			align-items: center;
			gap: 20px;
			width: 200px;

			a {
				transition: all 0.2s ease-in-out;

				&:hover {
					transform: scale(1.1);
				}
			}
		}
	}

	@media screen and (max-width: 768px) {
		.header {
			font-size: 1rem;
		}

		#skills {
			flex-direction: column;
		}
	}
</style>